
<div id="login" class="simple-page">
    <div class="site-content">
        <div class="heading">
            <h1>Vi har ikke set dig før</h1>
        </div>
        <div class="intro">
            <p>Så vi skal lige bruge dit navn også:</p>
        </div>
        <div class="form">
            <form method="POST">
                <div class="form-row">
                    <div class="label">
                        <label>Email</label>
                    </div>
                    <div class="controls">
                        <input name="email" required="required" type="email" placeholder="Din email" value="@ViewBag.Email" />        
                    </div>
                </div>
                <div class="form-row">
                    <div class="label">
                        <label>Navn</label>
                    </div>
                    <div class="controls">
                        <input name="name" required="required" type="text" placeholder="Dit navn" autofocus />
                    </div>
                </div>
                <div class="form-actions">
                    <input type="submit" value="Log ind / opret" />
                </div>
            </form>            
        </div>
    </div>
</div>
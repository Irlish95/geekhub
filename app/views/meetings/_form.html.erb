<div class="container_12">
  <%= form_for(@meeting) do |f| %>
    <% if @meeting.errors.any? %>
      <div id="error_explanation">
        <h2>Find <%= @meeting.errors.count %> fejl:</h2>
        <ul>
          <% @meeting.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="span12">
        <div class="well">
          <label class="radio">
            <%= f.radio_button :joinable, false %>
            Tilmelding skal ikke ske på geekhub.dk, men på en anden side.
          </label>
          <label class="radio">
            <%= f.radio_button :joinable, true %>
            <span class="label">beta</span> Tilmelding skal ske på geekhub.dk
          </label>
        </div>
        <div class="well" data-visible-field="input[name='meeting[joinable]']" data-visible-value="false">
          <div class="field">
            <%= f.label :url %>
            <%= f.text_field :url, placeholder: 'http://example.org', class: 'span11', 'data-behavior' => 'meeting-url' %>
          </div>
        </div>
        <div class="well" data-visible-field="input[name='meeting[joinable]']" data-visible-value="true">
          <div class="field-inline">
            <%= f.label :capacity %>
            <%= f.number_field :capacity, placeholder: 'f.eks. 50', class: 'span2', min: '1' %>
            <span class="help-inline">
              Lad den være tom, hvis der ikke er nogen maks kapacitet.
            </span>
          </div>
        </div>
      </div>
      <div class="span6"> 
        <div class="well">   
          <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'span5' %>
          </div>
          <div class="field">
            <%= f.label :starts_at %>
            <%= render partial: 'datepicker', locals: { f: f, field: :starts_at, value: @meeting.starts_at } %>
          </div>
          <div class="field checkbox">
            <%= f.check_box :costs_money %> <%= f.label :costs_money %>
          </div>
          <div class="field">
            <%= f.label :city_id %>
            <%= f.select(:city_id, City.order('name').collect {|p| [ p.name, p.id ] }, {:include_blank => 'Vælg venligst by'})%>
            <div>
              <small>Mangler der en by? Så skriv en mail til <a href="mailto:hello@geekhub.dk">hello@geekhub.dk</a>.</small>
            </div>
          </div>
          <div class="field">
            <%= f.label :address %>
            <%= f.text_field :address %> (valgfri, inkl postnummer og by)
          </div>
          <div class="field">
            <%= f.label :organizer %>
            <%= f.text_field :organizer %>
          </div>
        </div>
      </div>
      <div class="span6">
        <div class="well">
          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description, :rows => 13, class: 'span5' %>
            <small>(understøtter p.t. ikke fancy formateringer)</small>
          </div>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit class: 'btn btn-primary btn-large' %>
    </div>
  <% end %>
</div>

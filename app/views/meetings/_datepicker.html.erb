	<div class="date">
		<input type="text" maxlength="10" class="datepicker" name="date" value="<%=value ? value.strftime('%d/%m/%Y') : ''%>" />
	</div>
	<div class="time">
    	kl. 
    	<%= select_tag field.to_s + "_hour", time_options_for_select(value), { class: "time" } %>
    </div>
</div>
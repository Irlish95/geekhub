<div class="span12">
  <div class="meeting" data-lat="<%= meeting.latitude %>" data-lng="<%= meeting.longitude %>"> 
    <div class="map"> 
      <% unless meeting.address.blank? %>
        <%= google_maps_image_link meeting.address, 250, 150 %>
      <% end %>
    </div>
    <div>
      <%= friendly_date(meeting.starts_at) %>
    </div>
    <div class="title">
        <%= link_to meeting.title, meeting, title: meeting.title %>
    </div>
    <div class="hidden-phone">
      <%= render partial: 'meetings/tags', locals: { meeting: meeting } %> 
    </div>
  </div>
</div>

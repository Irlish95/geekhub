<%
  show_day = show_day || false
%>
<div class="meeting">
  <table>
    <tr>  
      <td class="date">
        <% if show_day %>
          <span class="day"><%= l meeting.starts_at, format: :weekday %></span>
          <span class="month"><%= l meeting.starts_at, format: :day %>. <%= l meeting.starts_at, format: :month %></span>
        <% else %>
          <span class="day"><%= l meeting.starts_at, format: :day %></span>
          <span class="month"><%= l meeting.starts_at, format: :month %></span>
        <% end %>
      </td>
      <td class="votes">
        <span class="num-votes"><%= meeting.meeting_votes.length %></span>
        <span class="label">up's</span>
      </td>
      <td>
        <div class="title">
          <%= link_to meeting.title, meeting %>
        </div>
      </td>
      <td class="information">
        <%= render partial: 'meetings/tags', locals: { meeting: meeting } %> 
      </td>
    </tr> 
  </table>  
</div>
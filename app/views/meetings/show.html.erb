<article class="meeting">
  <div class="grid_2 back">
    <%= link_to 'Tilbage', root_path %>
  </div>
  <div class="grid_6">
    <header>
      <h1><%= @meeting.title %></h1>
    </header>
    <section class="description">
      <%= nl2br @meeting.description %>
    </section>
    <footer>
      <%= link_to 'LÃ¦s mere', @meeting.url, {id: 'readmore'} %>
    </footer>
  </div>
  <aside class="grid_4">
    <span class="starts_at"><%= l @meeting.starts_at, format: :short %></span>
    <%= render partial: 'tags', locals: { meeting: @meeting } %>

    <% if user_signed_in? && 
       @meeting.can_be_edited_by(current_user) %>
      <div>
        <%= link_to 'Rediger', edit_meeting_path(@meeting) %>
      </div>
    <% end %>
  </aside>
</div>